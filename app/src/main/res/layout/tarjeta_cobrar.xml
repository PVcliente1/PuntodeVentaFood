<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="4dp"
    android:orientation="horizontal"
    app:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/Ingresado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@layout/bordes"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TVnombreProductoCobrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Large Text"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Cantidad" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="-46dp"
            android:ems="10"
            android:inputType="number"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="79dp"
            android:layout_marginTop="-65dp"
            android:text="Precio $" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="-20dp"
            android:text="Subtotal $" />

        <TextView
            android:id="@+id/Subtotal"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="10dp"
            android:background="@layout/bordes"
            android:text=" " />

        <Button
            android:id="@+id/BtnInfo"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_marginLeft="312dp"
            android:layout_marginTop="-45dp"
            android:backgroundTint="@color/ic_launcher_background"
            android:drawableTint="@android:color/black"
            android:drawableTop="@mipmap/ic_info_outline_black_24dp"
            android:gravity="top|left|right|center_horizontal|center"
            android:text="Info."
            android:textSize="10sp" />

        <Button
            android:id="@+id/BtnDescuento"
            android:layout_width="81dp"
            android:layout_height="54dp"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="-55dp"
            android:backgroundTint="@color/ic_launcher_background"
            android:drawableTop="@mipmap/ic_exposure_black_24dp"
            android:text="Descuento"
            android:textSize="10sp" />

        <Button
            android:id="@+id/BtnEliminarArt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="317dp"
            android:layout_marginTop="-105dp"
            android:backgroundTint="@android:color/background_light"
            android:drawableTop="@mipmap/ic_delete_forever_black_24dp"
            android:visibility="visible" />
    </LinearLayout>
</android.support.v7.widget.CardView>