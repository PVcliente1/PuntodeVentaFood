<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="3dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordes_grosor"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/TVunidadProductoCobrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:text="Large Text"
                android:textSize="17sp" />
            <TextView
                android:id="@+id/TVnombreProductoCobrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Large Text"
                android:textSize="17sp" />
            <Button
                android:id="@+id/BtnEliminarArt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:backgroundTint="@android:color/background_light"
                android:drawableTop="@mipmap/ic_delete_forever_black_24dp"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="Cantidad" />
            <TextView
                android:id="@+id/textView4"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio $" />
            </LinearLayout>
            <TextView
                android:id="@+id/textView5"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:text="Subtotal $" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ETcantidad"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/ETprecio"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:visibility="visible" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:text="Descuento"/>
                <CheckBox
                    android:id="@+id/CBDescuento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/ic_launcher_background"
                    android:textSize="10sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/TVtipoDescuento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=" "/>

                    <TextView
                        android:id="@+id/TVporcentajeDescuento"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </LinearLayout>
            </LinearLayout>
            <EditText
                android:id="@+id/TVsubtotal"
                android:gravity="center"
                android:textSize="18dp"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/bordes_grosor"
                android:text=" " />
            <Button
                android:id="@+id/BtnInfo"
                android:layout_width="42dp"
                android:layout_height="55dp"
                android:textAlignment="center"
                android:backgroundTint="@color/ic_launcher_background"
                android:drawableTint="@android:color/black"
                android:drawableTop="@mipmap/ic_info_outline_black_24dp"
                android:gravity="top|left|right|center_horizontal|center"
                android:text="Info."
                android:textSize="10sp" />

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>