<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    app:cardCornerRadius="4dp"
    android:backgroundTint="@android:color/holo_orange_light"
    app:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/totales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TVnombreProductoCobrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="Totales"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top|left"
            android:layout_marginTop="5dp"
            android:text="Total $" />

        <TextView
            android:id="@+id/total"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:gravity="left"
            android:layout_marginTop="10dp"
            android:background="@layout/bordes"
            android:text=" " />

        <Button
            android:id="@+id/BtnDescuento"
            android:layout_width="81dp"
            android:layout_height="54dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="-40dp"
            android:backgroundTint="@color/ic_launcher_background"
            android:drawableTop="@mipmap/ic_exposure_black_24dp"
            android:inputType="textMultiLine"
            android:text="Descuento"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginTop="-80dp"
            android:background="@drawable/edittexts"
            android:ems="10"
            android:hint="Cliente (Opcional)"
            android:inputType="number"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittexts"
            android:ems="10"
            android:hint="DescripciÃ³n de la compra"
            android:inputType="number"
            android:textSize="14sp"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/LOpagar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/RBpagado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pagado" />

                <RadioButton
                    android:id="@+id/RBporCobrar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:text="Por Cobrar" />
            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/BtnEliminarCompra"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="-45dp"
            android:layout_marginRight="100dp"
            android:layout_gravity="right"
            android:backgroundTint="@android:color/background_light"
            android:drawableTop="@mipmap/ic_delete_forever_black_24dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/BtnAceptarCompra"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:layout_marginTop="-50dp"
            android:backgroundTint="@android:color/background_light"
            android:drawableTint="@color/cardview_dark_background"
            android:drawableTop="@mipmap/ic_check_circle_black_24dp"
            android:visibility="visible" />

    </LinearLayout>
</android.support.v7.widget.CardView>