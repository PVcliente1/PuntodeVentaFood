<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/windowBackground"
    android:backgroundTint="?android:attr/windowBackground"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context="com.example.ricardosernam.puntodeventa.Benvenida.Personalizacion1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:backgroundTint="@color/cardview_light_background"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Logo de la empresa"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ImgImagen"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/ic_launcher_round" />

            <Button
                android:id="@+id/BtnLogoEmpresa"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:drawableTop="@drawable/ic_menu_gallery" />
        </LinearLayout>
    </LinearLayout>
    <!--  Name Label -->
    <EditText
        android:id="@+id/ETnombreEmpresa"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:inputType="textCapWords" />

    <EditText
            android:id="@+id/ETapellidosEmpresa"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:hint="Dirección"
            android:inputType="textEmailAddress" />
        <EditText
            android:id="@+id/ETtelefonoEmpresa"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teléfono"
            android:inputType="phone" />
        <EditText
            android:id="@+id/ETcorreoEmpresa"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo"
            android:inputType="textEmailAddress" />
        <EditText
            android:id="@+id/ETpaginaEmpresa"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pagina web"
            android:inputType="textEmailAddress" />

    <LinearLayout
        android:id="@+id/LLhorario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horario"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/ETentradaHorario"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="Entrada"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/ETsalidaHorario"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="Salida"
            android:textSize="18dp" />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/LLturnos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Turno 1"
                android:textSize="18dp" />

        <EditText
            android:id="@+id/ETentradaTurno1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Entrada" />

        <EditText
            android:id="@+id/ETsalidaTurno1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Salida" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LLturno2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turno 2"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/ETentradaTurno2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="Entrada" />

        <EditText
            android:id="@+id/ETsalidaTurno2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="Salida" />
    </LinearLayout>

    <Button
        android:id="@+id/BtnAceptarPersonalización"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Aceptar" />
</LinearLayout>
