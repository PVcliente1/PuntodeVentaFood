<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/TVproducto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:backgroundTint="@color/viewfinder_border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Producto:"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/ETnombre"
                android:layout_width="wrap_content"
                android:enabled="false"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:hint="Nombre" />

            <Button
                android:id="@+id/BtnEditarProducto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:drawableTop="@mipmap/ic_border_color_black_24dp" />

            <Button
                android:id="@+id/BtnEliminarProducto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:drawableTop="@mipmap/ic_delete_forever_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@android:drawable/btn_star_big_on" />

            <Button
                android:layout_width="40dp"
                android:id="@+id/BtnImagen"
                android:visibility="invisible"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:drawableTop="@drawable/ic_menu_gallery" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:text="Precio $:" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:id="@+id/ETprecio"
                        android:enabled="false"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:hint="Precio" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/LObotones"
                    android:visibility="invisible"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/BtnCancelarProducto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancelar" />

                    <Button
                        android:id="@+id/BtnAceptarProducto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aceptar" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>