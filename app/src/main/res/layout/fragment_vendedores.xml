<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ricardosernam.puntodeventa.Vendedores">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/RVvendedores"
            android:layout_width="368dp"
            android:layout_height="234dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="60dp"></android.support.v7.widget.RecyclerView>



        <TextView
            android:id="@+id/textView3"
            android:layout_width="240dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="Lista de vendedores"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="16dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnNuevoVendedor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar vendedor"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="309dp"
            tools:ignore="MissingConstraints" />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>
