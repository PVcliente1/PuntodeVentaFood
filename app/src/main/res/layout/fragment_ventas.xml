<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Ventas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ricardosernam.puntodeventa.Ventas.Ventas"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="43dp"
            android:background="@layout/solobordes"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/LOcobrar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/BtnHistorial"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/ic_history_black_24dp"
                android:text="Historial"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ConBarras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-45dp"
            android:background="@layout/solobordes"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <EditText
                android:id="@+id/ETcodigo"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:ems="10"
                android:inputType="number"
                android:textSize="14sp"
                tools:text="Nombre/Código" />

            <Button
                android:id="@+id/BtnEscanear"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="-35dp"
                android:text="Escanear"
                android:textSize="13dp" />

            <Button
                android:id="@+id/BtnProductos"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="262dp"
                android:layout_marginTop="-42dp"
                android:text="Productos"
                android:textSize="13dp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/LLopcionDeVenta"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/RGopcionesVenta"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/RBcotizar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cotización" />

                <RadioButton
                    android:id="@+id/RBapartar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Apartado" />

                <RadioButton
                    android:id="@+id/RBvender"
                    android:layout_width="wrap_content"
                    android:checked="true"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Venta" />
            </RadioGroup>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <!--<FrameLayout
            android:id="@+id/LOcobrar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        </FrameLayout>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/RVproductosSeleccionados"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>

                <android.support.v7.widget.CardView
                    android:id="@+id/CVcobrar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:visibility="invisible"
                    app:cardBackgroundColor="?android:attr/windowBackground"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:id="@+id/totales"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="top|left"
                            android:text="Total $" />

                        <TextView
                            android:id="@+id/TVtotal"
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/solo_grosor"
                            android:gravity="center"
                            android:text=" " />

                        <LinearLayout
                            android:id="@+id/LOdescuento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="70dp"
                            android:layout_marginTop="-40dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Descuento"
                                android:textSize="12dp" />

                            <CheckBox
                                android:id="@+id/CBDescuento"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/ic_launcher_background"
                                android:textSize="10sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/TVtipoDescuento"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text=" "/>

                                <TextView
                                    android:id="@+id/TVporcentajeDescuento"
                                    android:visibility="invisible"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center" />
                            </LinearLayout>
                        </LinearLayout>

                        <EditText
                            android:id="@+id/ETcliente"
                            android:focusable="false"
                            android:layout_width="200dp"
                            android:layout_height="30dp"
                            android:layout_gravity="right"
                            android:layout_marginTop="-80dp"
                            android:background="@drawable/edittexts"
                            android:ems="10"
                            android:hint="Cliente (Opcional)"
                            android:inputType="textPersonName"
                            android:textSize="14sp" />

                        <!-- android:inputType="text"-->
                        <EditText
                            android:id="@+id/ETdescripcion"
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:layout_gravity="right"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edittexts"
                            android:ems="10"
                            android:hint="Descripción de la venta"
                            android:textSize="16sp"
                            android:visibility="visible"
                            android:maxLength="72"
                            android:scrollbars="vertical"
                            android:inputType="textCapSentences|textMultiLine"/>

                        <LinearLayout
                            android:id="@+id/LOpagar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:orientation="horizontal">

                            <RadioGroup
                                android:id="@+id/RGopcionCobrar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/RBpagarAhora"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pagar ahora" />

                                <RadioButton
                                    android:id="@+id/RBporCobrar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="true"
                                    android:text="Por pagar" />

                            </RadioGroup>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/LObotones_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="0dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/LOedittext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="horizontal"
                                android:visibility="invisible">

                                <EditText
                                    android:id="@+id/ETfecha"
                                    android:layout_width="100dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="right"
                                    android:layout_marginTop="-80dp"
                                    android:background="@drawable/edittexts"
                                    android:ems="10"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:hint="Fecha"
                                    android:inputType="number"
                                    android:textSize="14sp" />

                                <EditText
                                    android:id="@+id/EThora"
                                    android:layout_width="100dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="right"
                                    android:layout_marginLeft="10dp"
                                    android:background="@drawable/edittexts"
                                    android:ems="10"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:hint="Hora (Opcional)"
                                    android:inputType="number"
                                    android:textSize="14sp"
                                    android:visibility="visible" />
                            </LinearLayout>

                            <Button
                                android:id="@+id/BtnEliminarCompra"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="45dp"
                                android:backgroundTint="@android:color/background_light"
                                android:drawableTint="@color/cardview_dark_background"
                                android:drawableTop="@mipmap/ic_delete_forever_black_24dp"
                                android:visibility="visible" />

                            <Button
                                android:id="@+id/BtnAceptarCompra"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="right"
                                android:backgroundTint="@android:color/background_light"
                                android:drawableTop="@mipmap/ic_check_circle_black_24dp"

                                android:visibility="visible" />
                        </LinearLayout>


                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
