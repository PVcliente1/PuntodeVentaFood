<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Ventas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ricardosernam.puntodeventa.Ventas"
    tools:layout_editor_absoluteY="81dp">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="43dp"
            android:background="@layout/solobordes"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/Cobrar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Vendedor" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="-43dp">

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="Cotización" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="Apartado" />

                <RadioButton
                    android:id="@+id/Vender"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="Vender" />
            </RadioGroup>

            <Button
                android:id="@+id/button2"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="-70dp"
                android:drawableTop="@mipmap/ic_history_black_24dp"
                android:text="Historial"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ConBarras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-45dp"
            android:background="@layout/solobordes"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <EditText
                android:id="@+id/editText"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:ems="10"
                android:inputType="number"
                android:textSize="14sp"
                tools:text="Nombre/Código" />

            <Button
                android:id="@+id/Escanear"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="-35dp"
                android:text="Escanear"
                android:textSize="13dp" />

            <Button
                android:id="@+id/Productos"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="262dp"
                android:layout_marginTop="-42dp"
                android:onClick="popout"
                android:text="Productos"
                android:textSize="13dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Cobrar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/Ingresado"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:layout_gravity="start"
                android:background="@layout/bordes"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Nombre del Producto"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Cantidad" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:ems="10"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="-46dp"
                    android:ems="10"
                    android:inputType="number"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="79dp"
                    android:layout_marginTop="-65dp"
                    android:text="Precio $" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="235dp"
                    android:layout_marginTop="-20dp"
                    android:text="Subtotal $" />

                <TextView
                    android:id="@+id/Subtotal"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="230dp"
                    android:layout_marginTop="10dp"
                    android:background="@layout/bordes"
                    android:text=" " />

                <Button
                    android:id="@+id/Info."
                    android:layout_width="50dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="312dp"
                    android:layout_marginTop="-45dp"
                    android:backgroundTint="@color/ic_launcher_background"
                    android:drawableTint="@android:color/black"
                    android:drawableTop="@mipmap/ic_info_outline_black_24dp"
                    android:gravity="top|left|right|center_horizontal|center"
                    android:text="Info."
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/Descuento"
                    android:layout_width="81dp"
                    android:layout_height="54dp"
                    android:layout_marginLeft="145dp"
                    android:layout_marginTop="-55dp"
                    android:backgroundTint="@color/ic_launcher_background"
                    android:drawableTop="@mipmap/ic_exposure_black_24dp"
                    android:text="Descuento"
                    android:textSize="10sp" />

                <ImageButton
                    android:id="@+id/EliminarArt"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="317dp"
                    android:layout_marginTop="-105dp"
                    android:backgroundTint="@android:color/transparent"
                    android:foregroundTint="@android:color/black"
                    android:src="@android:drawable/ic_delete"
                    android:tint="@android:color/background_dark"
                    android:tintMode="src_over"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@layout/bordes"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="300dp"
                    android:gravity="top|left"
                    android:text="Total $" />

                <TextView
                    android:id="@+id/Total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
