<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ricardosernam.puntodeventa.Ventas">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:text="Vendedor" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/Venta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="-30dp"
            android:text="Venta" />

        <RadioButton
            android:id="@+id/Cotizacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="-32dp"
            android:text="Cotización" />

        <Switch
            android:id="@+id/Switch"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Código de Barras" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ConBarras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@layout/solobordes"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/editText"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:ems="10"
            android:inputType="number"
            android:textSize="14sp"
            tools:text="Nombre/Código" />

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="-35dp"
            android:text="Escanear" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Cobrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:id="@+id/Ingresado"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:background="@layout/bordes"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Nombre del Producto"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Cantidad" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ems="10"
                android:inputType="number" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="-45dp"
                android:ems="10"
                android:inputType="number"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="-65dp"
                android:text="Precio $" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="-20dp"
                android:text="Subtotal $" />

            <TextView
                android:id="@+id/Subtotal"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="245dp"
                android:layout_marginTop="10dp"
                android:background="@layout/bordes"
                android:text=" " />

            <ImageButton
                android:id="@+id/EliminarArt"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:layout_marginLeft="325dp"
                android:layout_marginTop="-45dp"
                android:backgroundTint="@color/ic_launcher_background"
                android:foregroundTint="@android:color/black"
                android:src="@android:drawable/ic_menu_delete"
                android:tint="@android:color/background_dark"
                android:tintMode="src_over"
                android:visibility="visible" />

            <Button
                android:id="@+id/Descuento"
                android:layout_width="81dp"
                android:layout_height="54dp"
                android:layout_marginLeft="165dp"
                android:layout_marginTop="-55dp"
                android:backgroundTint="@color/ic_launcher_background"
                android:drawableTop="@mipmap/ic_exposure_black_24dp"
                android:text="Descuento"
                android:textSize="10sp" />

            <Button
                android:id="@+id/Info."
                android:layout_width="50dp"
                android:layout_height="63dp"
                android:layout_marginLeft="330dp"
                android:layout_marginTop="-106dp"
                android:backgroundTint="@color/ic_launcher_background"
                android:drawableTint="@android:color/black"
                android:drawableTop="@android:drawable/ic_menu_info_details"
                android:gravity="top|left|right|center_horizontal|center"
                android:text="Info."
                android:textSize="10sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="160dp"
            android:background="@layout/bordes"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:gravity="top|left"
                android:text="Total $" />

            <TextView
                android:id="@+id/Total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
