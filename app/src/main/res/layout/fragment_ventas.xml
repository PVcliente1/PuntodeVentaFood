<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Ventas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ricardosernam.puntodeventa.Ventas"
    tools:layout_editor_absoluteY="81dp">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="43dp"
            android:background="@layout/solobordes"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/LOcobrar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Vendedor" />

            <Spinner
                android:id="@+id/SpnVendedor"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />


            <RadioGroup
                android:id="@+id/RGopcionVentas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="-43dp">

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="Cotización" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="Apartado" />

                <RadioButton
                    android:id="@+id/Vender"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="Vender" />
            </RadioGroup>

            <Button
                android:id="@+id/BtnHistorial"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="-70dp"
                android:drawableTop="@mipmap/ic_history_black_24dp"
                android:text="Historial"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ConBarras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-45dp"
            android:background="@layout/solobordes"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <EditText
                android:id="@+id/ETcodigo"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:ems="10"
                android:inputType="number"
                android:textSize="14sp"
                tools:text="Nombre/Código" />

            <Button
                android:id="@+id/BtnEscanear"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="-35dp"
                android:text="Escanear"
                android:textSize="13dp" />

            <Button
                android:id="@+id/BtnProductos"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="262dp"
                android:layout_marginTop="-42dp"
                android:text="Productos"
                android:textSize="13dp" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/LOcobrar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        </FrameLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:cardCornerRadius="4dp"
            android:backgroundTint="@android:color/holo_orange_light"
            app:cardElevation="4dp">

            <LinearLayout
                android:id="@+id/totales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TVnombreProductoCobrar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="Totales"
                    android:textSize="17sp" />
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top|left"
                    android:layout_marginTop="5dp"
                    android:text="Total $" />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:gravity="left"
                    android:layout_marginTop="10dp"
                    android:background="@layout/bordes"
                    android:text=" " />

                <Button
                    android:id="@+id/BtnDescuento"
                    android:layout_width="81dp"
                    android:layout_height="54dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="-40dp"
                    android:backgroundTint="@color/ic_launcher_background"
                    android:drawableTop="@mipmap/ic_exposure_black_24dp"
                    android:inputType="textMultiLine"
                    android:text="Descuento"
                    android:textSize="10sp" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="-80dp"
                    android:background="@drawable/edittexts"
                    android:ems="10"
                    android:hint="Cliente (Opcional)"
                    android:inputType="number"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittexts"
                    android:ems="10"
                    android:hint="Descripción de la compra"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/LOpagar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/RBpagado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Pagado" />

                        <RadioButton
                            android:id="@+id/RBporCobrar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:text="Por Cobrar" />
                    </RadioGroup>
                </LinearLayout>

                <Button
                    android:id="@+id/BtnEliminarCompra"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="-45dp"
                    android:layout_marginRight="100dp"
                    android:layout_gravity="right"
                    android:backgroundTint="@android:color/background_light"
                    android:drawableTop="@mipmap/ic_delete_forever_black_24dp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/BtnAceptarCompra"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="-50dp"
                    android:backgroundTint="@android:color/background_light"
                    android:drawableTint="@color/cardview_dark_background"
                    android:drawableTop="@mipmap/ic_check_circle_black_24dp"
                    android:visibility="visible" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
