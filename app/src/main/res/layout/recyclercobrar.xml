<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
                 <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                     <RadioGroup
                         android:id="@+id/RGopcionesVenta"
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:orientation="horizontal">

                         <RadioButton
                             android:id="@+id/RBcotizar"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_weight="1"
                             android:text="Cotización" />

                         <RadioButton
                             android:id="@+id/RBapartar"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginLeft="10dp"
                             android:layout_weight="1"
                             android:text="Apartado" />

                         <RadioButton
                             android:id="@+id/RBvender"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginLeft="10dp"
                             android:layout_weight="1"
                             android:text="Venta" />
                     </RadioGroup>
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                android:id="@+id/RVrecicladorCobrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp">
                </android.support.v7.widget.RecyclerView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:id="@+id/CVcobrar"
                    android:layout_height="190dp"
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal"
                    app:cardCornerRadius="4dp"
                    android:backgroundTint="@android:color/holo_orange_light"
                    app:cardElevation="4dp"
                    android:gravity="bottom">

        <LinearLayout
            android:id="@+id/totales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:layout_marginTop="5dp"
                android:text="Total $" />

            <TextView
                android:id="@+id/total"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:background="@drawable/bordes_grosor"
                android:text=" " />

            <LinearLayout
                android:id="@+id/LOdescuento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="-40dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:text="Descuento"/>
                <CheckBox
                    android:id="@+id/CBDescuento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/ic_launcher_background"
                    android:textSize="10sp" />
                <TextView
                    android:id="@+id/TVtipoDescuento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=" "/>
            </LinearLayout>

            <EditText
                android:id="@+id/ETcliente"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginTop="-80dp"
                android:background="@drawable/edittexts"
                android:ems="10"
                android:hint="Cliente (Opcional)"
                android:inputType="number"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/ETdescripcion"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittexts"
                android:ems="10"
                android:hint="Descripción de la compra"
                android:inputType="number"
                android:textSize="14sp"
                android:visibility="visible" />

           <!-- <LinearLayout
                android:id="@+id/LOfecha_hora"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="left"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

            </LinearLayout>-->

                <LinearLayout
                    android:id="@+id/LOpagar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/RGopcionCobrar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/RBpagarAhora"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pagar ahora" />

                        <RadioButton
                            android:id="@+id/RBporCobrar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Por Cobrar" />

                    </RadioGroup>
                </LinearLayout>

            <LinearLayout
                android:id="@+id/LObotones_edittext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/LOedittext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/ETfecha"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:layout_gravity="right"
                        android:layout_marginTop="-80dp"
                        android:background="@drawable/edittexts"
                        android:ems="10"
                        android:hint="Fecha"
                        android:inputType="number"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/EThora"
                        android:layout_width="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:layout_gravity="right"
                        android:background="@drawable/edittexts"
                        android:ems="10"
                        android:hint="Hora (Opcional)"
                        android:inputType="number"
                        android:textSize="14sp"
                        android:visibility="visible" />
                </LinearLayout>
            <Button
                android:id="@+id/BtnEliminarCompra"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="45dp"
                android:backgroundTint="@android:color/background_light"
                android:drawableTint="@color/cardview_dark_background"
                android:drawableTop="@mipmap/ic_delete_forever_black_24dp"
                android:visibility="visible" />

                <Button
                    android:id="@+id/BtnAceptarCompra"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:drawableTop="@mipmap/ic_check_circle_black_24dp"
                    android:backgroundTint="@android:color/background_light"

                    android:visibility="visible" />
            </LinearLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>
        </LinearLayout>

    </ScrollView>



